        <div class="form-group">
            <label class="control-label col-sm-2" for="dropDownType">Type</label>
            <div class="col-sm-10" id="dropDownType">
                @Html.DropDownListFor(t => t.SelectedType.Id, Model.Types, "", new { @class = "form-control" })
            </div>
        </div>

        <!--Brands - Label + dropdown-->
        <div class="form-group">
            <label class="control-label col-sm-2" for="dropDownBrand">Brand</label>
            <div class="col-sm-10" id="dropDownBrand">
                @Html.DropDownListFor(t => t.SelectedBrand.Id, Model.Brands, "", new { @class = "form-control" })
            </div>
        </div>

        <!--Year - Label + input-->
        <div class="form-group">
            <label class="control-label col-sm-2">Year:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="year" name="year">
            </div>
        </div>

        <!--WheelSize - Label + dropdown-->
        <div class="form-group">
            <label class="control-label col-sm-2" for="dropDownWheelsize">Wheel Size</label>
            <div class="col-sm-10" id="dropDownWheelsize">
                @Html.DropDownListFor(t => t.SelectedWheel.Id, Model.Wheels, "", new { @class = "form-control" })
            </div>
        </div>

        <!--FrameSize - Label + dropdown-->
        <div class="form-group">
            <label class="control-label col-sm-2" for="dropDownFramesize">Frame Size</label>
            <div class="col-sm-10" id="dropDownFramesize">
                @Html.DropDownListFor(t => t.SelectedFrame.Id, Model.Frames, "", new { @class = "form-control" })
            </div>
        </div>

