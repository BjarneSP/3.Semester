@{
    ViewBag.Title = "CreateBike";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h2>Create bicycle</h2>

    <form method="post" class="form-horizontal">

        <!--Whitespace-->
        <div class="col-xs-12" style="height: 50px;"></div>





