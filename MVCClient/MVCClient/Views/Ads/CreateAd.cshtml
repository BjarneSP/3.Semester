@model MVCClient.ViewModel.BikeDetails
@{
    ViewBag.Title = "CreateAd";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var errorMessage = TempData["AlertMessage"] ?? string.Empty;
}

<h2>CreateAd</h2>

<form method="post">
    <div class="form-group">
        <label for="inputTitle">Title: </label>
        <input type="text" class="form-control" id="inputTitle" required name="inputTitle" placeholder="Title">
    </div>
    <div class="form-group">
        <label for="inputDesc">Description: </label>
        <input type="text" class="form-control" id="inputDesc" required name="inputDesc" placeholder="Description">
    </div>
    <div class="form-group">
        <label for="inputPrice">Price: </label>
        <input type="text" class="form-control" id="inputPrice" required name="inputPrice" placeholder="Price">
    </div>
    <div class="form-group">
        <label for="inputSDate">Start date: </label>
        <input type="date" class="form-control" required id="inputSDate" name="inputSDate">
    </div>
    <div class="form-group">
        <label for="inputEDate">End date: </label>
        <input type="date" class="form-control" required id="inputEDate" name="inputEDate">
    </div>
    <div class="form-group">
        <label for="dropDownBikes">Bike: </label>
        <div id="dropDownBikes" name="dropDownBikes">
            @Html.DropDownListFor(t => t.SelectedBike.ID, Model.Bicycles, "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Create Advertisement</button>
    </div>

</form>
<script type="text/javascript">
    var message = '@errorMessage';
    if (message) {
        alert(message);
    }
</script>