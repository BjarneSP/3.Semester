
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Register</h2>
@{  
//TODO: post method annotation
}
<form method="post">
    <div class="form-group">
        <label for="inputEmail">Email </label>
        <input type="email"required class="form-control" id="inputEmail" name="inputEmail" placeholder="Email">
    </div>
    <div class="form-group">
        <label for="inputPassword">Password </label>
        <input type="text" required class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" id="inputPassword" name="inputPassword" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="inputName">Name </label>
        <input type="text" required class="form-control" pattern="^[a-zA-Z\s]+$" title="Name can only contain letters" id="inputName" name="inputName" placeholder="Name">
    </div>
    <div class="form-group">
        <label for="inputPhone">Phone </label>
        <input type="text" required class="form-control" pattern="[0-9]{8}" title="Phone number has to be 8 digits" id="inputPhone" name="inputPhone" placeholder="Phone">
    </div>
    <div class="form-group">
        <label for="inputAddress">Address </label>
        <input type="text" class="form-control" pattern="(?=.*\d)(?=.*[a-zA-Z]).{4,}" title="Address must contain street name and house number" id="inputAddress" name="inputAddress" placeholder="Address">
    </div>
    <div class="form-group">
        <label for="inputZipcode">Zipcode </label>
        <input type="text" required class="form-control" pattern="[0-9]{4}" title="Zipcode has to be 4 digits" id="inputZipcode" name="inputZipcode" placeholder="Zipcode">
    </div>
    <div class="form-group">
        <label for="inputAge">Age</label>
        <input type="text"required class="form-control" pattern="^(1[8,9]|[2-9][0-9]|1[0-2][0-9])$" title="Age has to be between 18 and 129" id="inputAge" name="inputAge" placeholder="Age">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Register</button>
    </div>

</form>

<script type="text/javascript">
	var message = '@ViewBag.Message';
	if (message) {
		alert(message);
	}
</script>
@section scripts
{
	@Scripts.Render("~/bundles/jqueryval")
}
